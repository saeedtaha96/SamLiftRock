<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin24"
    android:layout_marginTop="@dimen/margin6"
    android:layout_marginEnd="@dimen/margin24"
    android:layout_marginBottom="@dimen/margin6"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/margin4"
    app:cardElevation="@dimen/margin4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin24"
        android:paddingTop="@dimen/margin12"
        android:paddingEnd="@dimen/margin24"
        android:paddingBottom="@dimen/margin12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/adapter_cardex_rv_view"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/color_red_havale_FF0000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin24">

                <TextView
                    android:id="@+id/adapter_cardex_tv_id"
                    style="@style/AppFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="موجودی اول دوره شماره R0-0"
                    android:textColor="@color/color_blue_theme_004677"
                    android:textSize="@dimen/text_size14" />

                <TextView
                    android:id="@+id/adapter_cardex_tv_cust_name"
                    style="@style/AppFont"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شرکت صنعت نوین جناب آقای مهندس بزاز"
                    android:textColor="@color/color_blue_theme_004677"
                    android:textSize="@dimen/text_size11" />

                <TextView
                    android:id="@+id/adapter_cardex_tv_date"
                    style="@style/AppFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_date"
                    android:gravity="start|center_vertical"
                    android:drawablePadding="@dimen/margin8"
                    android:text="1398/05/23"
                    android:textColor="@color/color_gray_text"
                    android:textSize="@dimen/text_size11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin8"
                    android:layout_marginBottom="@dimen/margin8">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start">

                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_incoming"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/text_size13" />

                        <TextView
                            android:id="@+id/adapter_cardex_tv_incoming"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="center"
                            android:text="920"
                            android:textColor="@color/color_black_000000"
                            android:textSize="@dimen/text_size13" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start">

                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_outgoing"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/text_size13" />

                        <TextView
                            android:id="@+id/adapter_cardex_tv_outgoing"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="end"
                            android:text="55"
                            android:textColor="@color/color_black_000000"
                            android:textSize="@dimen/text_size13" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start">

                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_inventory"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/text_size13" />

                        <TextView
                            android:id="@+id/adapter_cardex_inventory"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="center"
                            android:text="865"
                            android:textColor="@color/color_black_000000"
                            android:textSize="@dimen/text_size13" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>