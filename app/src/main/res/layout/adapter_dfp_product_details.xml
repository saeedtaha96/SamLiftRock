<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin24"
    android:layout_marginTop="@dimen/margin6"
    android:layout_marginEnd="@dimen/margin24"
    android:layout_marginBottom="@dimen/margin6"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/margin4"
    app:cardElevation="@dimen/margin4"
    tools:context=".activity.DraftFromPermActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin6"
        android:paddingTop="@dimen/margin12"
        android:paddingEnd="@dimen/margin6"
        android:paddingBottom="@dimen/margin12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_counter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin12">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical">

                    <TextView
                        android:id="@+id/relative_adapter_dfp_tv_id"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="@string/shomare_fanni"
                        android:textColor="@color/color_blue_theme_004677"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/adapter_dfp_product_details_tv_tech_no"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/relative_adapter_dfp_tv_id"
                        android:layout_alignBottom="@id/relative_adapter_dfp_tv_id"
                        android:layout_marginStart="@dimen/margin12"
                        android:layout_toEndOf="@id/relative_adapter_dfp_tv_id"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        tools:text="M98-0003" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/color_blue_theme_004677"
                        android:alpha="0.7"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/margin12"
                        android:textStyle="bold"
                        tools:text="@string/txt_product" />
                    <TextView
                        android:id="@+id/adapter_dfp_product_details_tv_product_name"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/color_gray_text"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold"
                        tools:text="شرکت صنعت نوین جناب آقای مهندس بزاز" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_tedad"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/adapter_dfp_product_details_tv_tedad"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="center"
                            android:text="920"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_unit"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/adapter_dfp_product_details_tv_unit"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="center"
                            android:text="920"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:gravity="center_vertical|start"
                            android:text="@string/txt_inventory"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/adapter_dfp_product_details_tv_onhand"
                            style="@style/AppFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin24"
                            android:gravity="center"
                            android:text="920"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/adapter_dfp_product_details_btn_edit"
                    style="@style/AppFont"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin8"
                    android:layout_marginTop="@dimen/margin16"
                    android:layout_marginEnd="@dimen/margin24"
                    android:layout_marginBottom="@dimen/margin6"
                    android:background="@drawable/selector_btn_save"
                    android:gravity="center"
                    android:text="@string/txt_edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>