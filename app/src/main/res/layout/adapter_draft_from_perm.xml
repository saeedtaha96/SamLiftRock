<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin24"
    android:layout_marginTop="@dimen/margin6"
    android:layout_marginEnd="@dimen/margin24"
    android:layout_marginBottom="@dimen/margin6"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/margin4"
    app:cardElevation="@dimen/margin4"
    tools:context=".activity.DraftFromPermActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin6"
        android:paddingTop="@dimen/margin12"
        android:paddingEnd="@dimen/margin6"
        android:paddingBottom="@dimen/margin12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_counter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin12">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical">

                    <TextView
                        android:id="@+id/relative_adapter_dfp_tv_id"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/color_blue_theme_004677"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/txt_perm_num_2" />

                    <TextView
                        android:id="@+id/adapter_dfp_tv_perm_num"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/relative_adapter_dfp_tv_id"
                        android:layout_alignBottom="@id/relative_adapter_dfp_tv_id"
                        android:layout_marginStart="@dimen/margin12"
                        android:layout_toEndOf="@id/relative_adapter_dfp_tv_id"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        tools:text="M98-0003" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/adapter_dfp_tv_cust_name"
                    style="@style/AppFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/color_gray_text"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    tools:text="شرکت صنعت نوین جناب آقای مهندس بزاز" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin8">


                    <TextView
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:gravity="center_vertical|start"
                        android:text="@string/txt_pre_factor_numb"
                        android:textColor="@color/color_gray_text"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/adapter_dfp_tv_prefactor_num"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin24"
                        android:gravity="center"
                        android:text="920"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/adapter_dfp_tv_date"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin8"
                        android:drawableEnd="@drawable/ic_date"
                        android:drawablePadding="@dimen/margin8"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/color_gray_text"
                        android:textSize="@dimen/_9sdp"
                        tools:text="1398/05/23" />


                    <TextView
                        android:id="@+id/relative_condition"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:gravity="center_vertical|start"
                        android:layout_alignParentStart="true"
                        android:text="@string/txt_condition"
                        android:textColor="@color/color_gray_text"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/adapter_dfp_tv_condition"
                        style="@style/AppFont"
                        android:layout_toEndOf="@id/relative_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin24"
                        android:gravity="center"
                        android:text="عادی"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />

                </RelativeLayout>



                <Button
                    android:id="@+id/adapter_dfp_btn_draft"
                    style="@style/AppFont"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin8"
                    android:layout_marginTop="@dimen/margin16"
                    android:layout_marginEnd="@dimen/margin24"
                    android:layout_marginBottom="@dimen/margin6"
                    android:background="@drawable/selector_btn_save"
                    android:gravity="center"
                    android:text="@string/txt_draft_from_perm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>