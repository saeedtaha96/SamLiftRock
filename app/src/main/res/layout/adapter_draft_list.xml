<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:clickable="true"
    android:contextClickable="true"
    android:focusable="true"
    android:layoutDirection="rtl"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_FFFFFF"
        android:padding="@dimen/margin12"
        android:paddingTop="@dimen/margin16">


        <RelativeLayout
            android:id="@+id/relative_col1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/relative_tv_draft_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_draft_list"
                android:drawablePadding="@dimen/margin8"
                android:fontFamily="@font/iran_sans_web"
                android:gravity="start|center"
                android:text="@string/txt_shomare_havale"
                android:textColor="@color/color_blue_theme_004677"
                android:textSize="@dimen/lists_text_size" />

            <TextView
                android:id="@+id/activity_draft_list_tv_draft_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/relative_tv_draft_number"
                android:layout_marginStart="@dimen/margin32"
                android:layout_toEndOf="@id/relative_tv_draft_number"
                android:fontFamily="@font/iran_sans_web"
                android:gravity="center"
                android:text="H98-E-5"
                android:textColor="@color/color_black_000000"
                android:textSize="@dimen/lists_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_col2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_col1"
            android:layout_alignParentStart="@id/relative_col1"
            android:layout_marginTop="@dimen/margin12"
            android:gravity="start|center"
            >


            <TextView
                android:id="@+id/relative_tv_perm_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_perm_number_24dp"
                android:drawablePadding="@dimen/margin8"
                android:fontFamily="@font/iran_sans_web"
                android:gravity="start|center"
                android:text="@string/txt_perm_num"
                android:textColor="@color/color_blue_theme_004677"
                android:textSize="@dimen/lists_text_size" />

            <TextView
                android:id="@+id/activity_draft_list_tv_perm_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/relative_tv_perm_number"
                android:layout_marginStart="@dimen/margin32"
                android:layout_toEndOf="@id/relative_tv_perm_number"
                android:fontFamily="@font/iran_sans_web"
                android:gravity="center"
                android:text="1545"
                android:textColor="@color/color_black_000000"
                android:textSize="@dimen/lists_text_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/relative_tv_cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_col2"
            android:layout_marginTop="@dimen/margin12"
            android:drawableStart="@drawable/ic_customer_name_24dp"
            android:drawablePadding="@dimen/margin8"
            android:fontFamily="@font/iran_sans_web"
            android:gravity="bottom"
            android:text="@string/txt_cust_name"
            android:textColor="@color/color_blue_theme_004677"
            android:textSize="@dimen/lists_text_size" />

        <TextView
            android:id="@+id/activity_draft_list_tv_cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/relative_tv_cust_name"
            android:layout_marginStart="@dimen/margin32"
            android:layout_toEndOf="@id/relative_tv_cust_name"
            android:fontFamily="@font/iran_sans_web"
            android:gravity="center"
            android:text="رابرت محمود"
            android:textColor="@color/color_black_000000"
            android:textSize="@dimen/lists_text_size" />

        <TextView
            android:id="@+id/activity_draft_list_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin16"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/iran_sans_web"
            android:text="98/08/02"
            android:textColor="@color/color_gray_text"
            android:textSize="@dimen/text_size12" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>