<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/radius12"
    app:cardElevation="@dimen/margin8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item"
        android:padding="@dimen/margin12"
        android:paddingTop="@dimen/margin16">


        <RelativeLayout
            android:id="@+id/relative_col1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">


            <TextView
                android:id="@+id/relative_tv_draft_number"
                style="@style/AppFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_receipt_num_24dp"
                android:drawablePadding="@dimen/margin8"
                android:gravity="center"
                android:text="@string/txt_receipt_num_dd"
                android:textColor="@color/color_blue_theme_004677"
                android:textSize="@dimen/lists_text_size" />

            <TextView
                android:id="@+id/activity_receipt_list_tv_receipt_num"
                style="@style/AppFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/relative_tv_draft_number"
                android:layout_marginStart="@dimen/margin32"
                android:layout_toEndOf="@id/relative_tv_draft_number"
                android:gravity="center"
                android:text="H98-E-5"
                android:textColor="@color/color_black_000000"
                android:textSize="@dimen/lists_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_col2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_col1"
            android:layout_alignStart="@id/relative_col1"
            android:layout_marginTop="@dimen/margin12">


            <TextView
                android:id="@+id/relative_tv_perm_number"
                style="@style/AppFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:drawableStart="@drawable/ic_receipt_type_1"
                android:drawablePadding="@dimen/margin8"
                android:gravity="center"
                android:text="@string/txt_receipt_type_dd"
                android:textColor="@color/color_blue_theme_004677"
                android:textSize="@dimen/lists_text_size" />

            <TextView
                android:id="@+id/activity_receipt_list_tv_receipt_type"
                style="@style/AppFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/relative_tv_perm_number"
                android:layout_marginStart="@dimen/margin32"
                android:layout_toEndOf="@id/relative_tv_perm_number"
                android:gravity="center"
                android:text="1545"
                android:textColor="@color/color_black_000000"
                android:textSize="@dimen/lists_text_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/relative_tv_product_source"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_col2"
            android:layout_marginTop="@dimen/margin12"
            android:drawableStart="@drawable/ic_source"
            android:drawablePadding="@dimen/margin8"
            android:gravity="center"
            android:text="@string/txt_product_source_dd"
            android:textColor="@color/color_blue_theme_004677"
            android:textSize="@dimen/lists_text_size" />

        <TextView
            android:id="@+id/relative_tv_condition"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_tv_product_source"
            android:layout_alignStart="@id/relative_col2"
            android:layout_marginTop="@dimen/margin12"
            android:drawableStart="@drawable/ic_state"
            android:drawablePadding="@dimen/margin8"
            android:gravity="center|start"
            android:text="@string/txt_condition_dd"
            android:textColor="@color/color_blue_theme_004677"
            android:textSize="@dimen/lists_text_size" />

        <TextView
            android:id="@+id/activity_receipt_list_tv_condition"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/relative_tv_condition"
            android:layout_alignBottom="@id/relative_tv_condition"
            android:layout_marginStart="@dimen/margin32"
            android:layout_toEndOf="@id/relative_tv_condition"
            android:gravity="center"
            android:padding="@dimen/margin4"
            android:text="خوب"
            android:textColor="@color/color_black_000000"
            android:textSize="@dimen/lists_text_size" />


        <TextView
            android:id="@+id/activity_receipt_list_tv_product_source"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/relative_tv_product_source"
            android:layout_marginStart="@dimen/margin32"
            android:layout_toEndOf="@id/relative_tv_product_source"
            android:gravity="center"
            android:text="رابرت محمود"
            android:textColor="@color/color_black_000000"
            android:textSize="@dimen/lists_text_size" />

        <TextView
            android:id="@+id/activity_receipt_list_tv_date"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/margin16"
            android:text="98/08/02"
            android:textColor="@color/color_gray_text"
            android:textSize="@dimen/text_size12" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>