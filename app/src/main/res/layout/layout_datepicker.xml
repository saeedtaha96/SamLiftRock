<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layoutDirection="rtl"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/margin12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin24"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginEnd="@dimen/margin24"
        android:layout_marginBottom="@dimen/margin24"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="8">


        <EditText
            android:id="@+id/activity_datepicker_input_datepicker"
            style="@style/AppFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:background="@drawable/shape_borderless_datepicker"
            android:digits="123456789/"
            android:drawableStart="@drawable/search_40dp"
            android:gravity="center"
            android:hint="@string/txt_date"
            android:inputType="date|text"
            android:maxLength="15"
            android:paddingStart="@dimen/margin16"
            android:paddingTop="@dimen/margin16"
            android:paddingEnd="@dimen/margin32"
            android:paddingBottom="@dimen/margin16"
            android:textAlignment="gravity"
            android:textColor="@color/color_black_000000"
            android:textColorHint="@color/color_gray_text"
            android:textDirection="ltr"
            android:textSize="@dimen/text_size16" />

        <ImageView
            android:id="@+id/activity_datepicker_imgv_datepicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_borderless_datepickerleft"
            android:padding="@dimen/margin12"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_date_range_black_24dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>